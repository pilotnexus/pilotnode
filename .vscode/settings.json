{
  "mocha.files.glob": "lib/test/**/*.js",
  "mocha.runTestsOnSave": "true",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename).map"
    },
    "node_modules/": true,
    "dist/": true,
    "lib/": true,
    ".editorconfig": true,
    ".eslintignore": true
  },
}